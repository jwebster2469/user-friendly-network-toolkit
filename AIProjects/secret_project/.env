# Application
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=listing_assistant
DB_USER=postgres
DB_PASSWORD=your_password  # Update with actual password

# JWT
JWT_SECRET=your_super_secret_jwt_key
JWT_ACCESS_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=2592000

# External APIs
TINEYE_API_KEY=your_tineye_api_key
OPENAI_API_KEY=your_openai_api_key
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_LOCATION_ID=your_square_location_id
SQUARE_APPLICATION_ID=your_square_application_id
SQUARE_ENVIRONMENT=sandbox

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,audio/wav,audio/mp3

# Marketplace Integration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
EBAY_APP_ID=your_ebay_app_id
EBAY_CERT_ID=your_ebay_cert_id

# Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Vosk Configuration
VOSK_MODEL_PATH=/path/to/vosk/model

# UI Theme Configuration
THEME_PRIMARY_COLOR=#1976d2
THEME_SECONDARY_COLOR=#dc004e
THEME_SUCCESS_COLOR=#4caf50
THEME_ERROR_COLOR=#f44336
THEME_WARNING_COLOR=#ff9800
THEME_INFO_COLOR=#2196f3
ENABLE_DARK_MODE=true
ENABLE_RTL=false
